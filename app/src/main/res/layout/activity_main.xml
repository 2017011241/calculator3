<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/black"
    tools:context="com.example.a18801.calculator.MainActivity">
        <Button
            android:text="1"
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_above="@+id/button2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:text="%"
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/button"
            android:layout_alignEnd="@+id/button" />
        <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_alignTop="@+id/button"
            android:layout_toRightOf="@+id/button2"
            android:layout_toEndOf="@+id/button2"
            android:id="@+id/button3" />
        <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_below="@+id/button3"
            android:layout_toRightOf="@+id/button2"
            android:layout_toEndOf="@+id/button2"
            android:id="@+id/button4" />
        <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_above="@+id/button4"
            android:layout_toRightOf="@+id/button3"
            android:layout_toEndOf="@+id/button3"
            android:id="@+id/button5" />
        <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_below="@+id/button5"
            android:layout_toRightOf="@+id/button4"
            android:layout_toEndOf="@+id/button4"
            android:id="@+id/button6" />
        <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_toRightOf="@+id/button5"
            android:layout_toEndOf="@+id/button5"
            android:id="@+id/button7"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/button5" />
        <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:id="@+id/button8"
            android:layout_above="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_above="@+id/button3"
            android:layout_toRightOf="@+id/button8"
            android:layout_toEndOf="@+id/button8"
            android:id="@+id/button9" />
        <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_alignTop="@+id/button9"
            android:layout_toRightOf="@+id/button3"
            android:layout_toEndOf="@+id/button3"
            android:id="@+id/button10" />
        <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_above="@+id/button8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/button11" />
        <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_above="@+id/button9"
            android:layout_toRightOf="@+id/button11"
            android:layout_toEndOf="@+id/button11"
            android:id="@+id/button12" />
        <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_alignTop="@+id/button12"
            android:layout_toRightOf="@+id/button9"
            android:layout_toEndOf="@+id/button9"
            android:id="@+id/button13" />
        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_below="@+id/button13"
            android:layout_toRightOf="@+id/button5"
            android:layout_toEndOf="@+id/button5"
            android:id="@+id/button14" />
        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_above="@+id/button14"
            android:layout_toRightOf="@+id/button13"
            android:layout_toEndOf="@+id/button13"
            android:id="@+id/button15" />
        <Button
            android:text="clear"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_above="@+id/button11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/button16"
            android:layout_toLeftOf="@+id/button12"
            android:layout_toStartOf="@+id/button12" />
        <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_alignTop="@+id/button16"
            android:layout_toRightOf="@+id/button11"
            android:layout_toEndOf="@+id/button11"
            android:id="@+id/button17" />
        <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_alignTop="@+id/button17"
            android:layout_toRightOf="@+id/button12"
            android:layout_toEndOf="@+id/button12"
            android:id="@+id/button18" />
        <Button
            android:text="back"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_above="@+id/button15"
            android:layout_toRightOf="@+id/button18"
            android:id="@+id/button19"
            android:layout_alignRight="@+id/button15"
            android:layout_alignEnd="@+id/button15" />
    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:background="@null"
        android:textColor="@color/white"
        android:textCursorDrawable="@null"
        android:layout_height="30pt"
        android:textColorLink="@color/white"
        android:gravity="right"
        android:textSize="35sp"
        android:maxLines="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="十进制"
        android:layout_width="wrap_content"
        android:layout_height="30pt"
        android:id="@+id/button21"
        android:layout_above="@+id/button16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="二进制"
        android:layout_width="wrap_content"
        android:layout_height="30pt"
        android:layout_above="@+id/button17"
        android:layout_toRightOf="@+id/button21"
        android:layout_toEndOf="@+id/button21"
        android:id="@+id/button22" />

    <Button
        android:text="十六进制"
        android:layout_width="wrap_content"
        android:layout_height="30pt"
        android:layout_above="@+id/button18"
        android:layout_toRightOf="@+id/button22"
        android:layout_toEndOf="@+id/button22"
        android:id="@+id/button23" />

    <Button
        android:text="八进制"
        android:layout_width="wrap_content"
        android:layout_height="30pt"
        android:id="@+id/button24"
        android:layout_above="@+id/button19"
        android:layout_toRightOf="@+id/button23"
        android:layout_toEndOf="@+id/button23"/>


</RelativeLayout>
